<h1>Listing meats</h1>

<table>
  <tr>
    <th>Animal</th>
    <th>Kind</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @meats.each do |meat| %>
  <tr>
    <td><%= meat.animal %></td>
    <td><%= meat.kind %></td>
    <td><%= link_to 'Show', meat %></td>
    <td><%= link_to 'Edit', edit_meat_path(meat) %></td>
    <td><%= link_to 'Destroy', meat, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

